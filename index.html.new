<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Professor Ruben â€” Learn English (Kids)</title>
  <link rel="stylesheet" href="style.css">
  <style>
    /* Critical inline styles to ensure layout if external CSS fails */
    :root{--bg:#f6fbff;--accent:#ff6b6b;--accent2:#ffd93d;--text:#222}
    html,body{height:100%;margin:0;background:linear-gradient(180deg,#eaf6ff,#f7fbff);color:var(--text);font-family:system-ui,-apple-system,'Segoe UI',Roboto,Arial}
    .top{padding:18px 16px;text-align:center}
    h1{margin:0;font-size:28px}
    .controls{display:flex;flex-wrap:wrap;gap:8px;justify-content:center;align-items:center;margin-top:10px}
    button{background:var(--accent);color:#fff;border:none;padding:8px 12px;border-radius:10px;cursor:pointer}
    .container{max-width:980px;margin:18px auto;padding:0 16px}
    .level{background:rgba(255,255,255,0.9);border-radius:12px;padding:16px;margin-bottom:12px;box-shadow:0 8px 20px rgba(0,0,0,0.06)}
  </style>
</head>
<body>
  <canvas id="bgCanvas" class="bg-canvas" aria-hidden="true"></canvas>
  <header class="top">
    <h1>Professor Ruben ðŸŽ“</h1>
    <p class="tag">Learn English while playing â€” tap to hear and choose!</p>
    <div class="controls">
      <button id="audioToggle" aria-pressed="false">ðŸ”Š Sound</button>
      <button id="musicToggle" aria-pressed="false">ðŸŽµ Music</button>
      <label class="volume"><span>ðŸ”‰</span><input id="volume" type="range" min="0" max="1" step="0.01" value="0.8"></label>
      <label class="music-select">Music: <select id="musicSelect">
        <option value="synth">Upbeat Loop (synth)</option>
        <option value="twinkle">Twinkle Twinkle (nursery)</option>
        <option value="happy">Happy Loop (upbeat)</option>
        <option value="oldmac">Old MacDonald (nursery)</option>
        <option value="wheels">Wheels On The Bus (nursery)</option>
      </select></label>
    </div>
      <div id="mascot" class="mascot" aria-hidden="true">ðŸ¦Š</div>
  </header>

  <main class="container">
    <div id="activationModal" class="modal hidden" role="dialog" aria-modal="true">
      <div class="modal-content">
        <h3>Activate with Key</h3>
        <p>Enter your activation key to use this game on this device.</p>
        <input id="activationInput" placeholder="Paste your key" style="width:100%;padding:8px;border-radius:8px;border:1px solid #ddd;margin:8px 0">
        <div style="display:flex;gap:8px;justify-content:center">
          <button id="activateBtn">Activate</button>
          <button id="activationClose">Close</button>
        </div>
        <div id="activationMsg" style="margin-top:8px;font-weight:700"></div>
      </div>
    </div>
    <div id="adminModal" class="modal hidden" role="dialog" aria-modal="true">
      <div class="modal-content">
        <h3>Admin â€” Generate Keys</h3>
        <p>Enter admin secret to generate a single-use key. Keep this secret safe.</p>
        <input id="adminSecretInput" placeholder="Admin secret" style="width:100%;padding:8px;border-radius:8px;border:1px solid #ddd;margin:8px 0">
        <div style="display:flex;gap:8px;justify-content:center;margin-bottom:8px">
          <button id="genKeyBtn">Generate Key</button>
          <button id="adminClose">Close</button>
        </div>
        <div id="genResult" style="margin-top:8px;font-weight:700;word-break:break-word"></div>
      </div>
    </div>
    <!-- external stylesheet `style.css` now contains the full styles; inline block removed -->

    <!-- Main selection and game areas -->
    <section id="levels">
      <h2>Choose a category</h2>
      <div id="levelGrid" class="level-grid"></div>
    </section>

    <section id="game" class="game hidden">
      <div class="hud">
        <div class="progress-wrap">
          <div class="progress"><div id="progressBar" class="progress-bar" style="width:0%"></div></div>
          <div class="progress-label">Progress</div>
        </div>
        <div id="stickers" class="stickers"></div>
      </div>

      <div class="card">
        <div id="emoji" class="emoji">ðŸ™‚</div>
        <div id="choices" class="choices"></div>
        <div id="feedback" class="feedback" style="margin-top:8px;font-weight:800"></div>
        <div class="meta" style="margin-top:12px;display:flex;gap:8px;justify-content:center">
          <button id="back">Back</button>
          <button id="speakBtn">Speak</button>
          <button id="next" class="next">Next</button>
        </div>
      </div>
    </section>

    <div id="stickerModal" class="modal hidden" role="dialog" aria-modal="true">
      <div class="modal-content">
        <div id="stickerShow" class="sticker-show">ðŸŽ‰</div>
        <div style="display:flex;justify-content:center"><button id="closeSticker">Close</button></div>
      </div>
    </div>

    <canvas id="confettiCanvas" class="confetti-canvas" aria-hidden="true"></canvas>

    <button id="adminBadge" class="admin-badge" title="Admin">ADMIN</button>

    <script src="app.js"></script>
  </main>
</body>
</html>
